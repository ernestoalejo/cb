{
  "closure": {
    "library": "~/projects/closure/closure-library",
    "compiler": "~/projects/closure/closure-compiler",
    "stylesheets": "~/projects/closure/closure-stylesheets",
    "templates": "~/projects/closure/closure-templates"
  },
  "sass": {
    "app.css": "styles/app.scss"
  },
  "gss": {
    "styles.css": "styles/app.css"
  },
  "watch": {
    "sass": ["styles/*.scss"],
    "soy": ["templates/**/*.soy"],
    "closurejs": ["scripts/**/*.js"]
  },
  "closurejs": {
    "dest": "scripts.js",
    "inputs": ["scripts/main.js"],
    "defines": {
      "goog.LOCALE": "es",
      "goog.DEBUG": "true"
    },
    "compilationLevel": "ADVANCED_OPTIMIZATIONS",
    "checks": {
      "ambiguousFunctionDecl":  "error",
      "checkRegExp":            "error",
      "checkTypes":             "error",
      "checkVars":              "error",
      "constantProperty":       "error",
      "deprecated":             "error",
      "fileoverviewTags":       "error",
      "internetExplorerChecks": "error",
      "invalidCasts":           "error",
      "missingProperties":      "error",
      "nonStandardJsDocs":      "error",
      "strictModuleDepCheck":   "error",
      "typeInvalidation":       "error",
      "undefinedNames":         "error",
      "undefinedVars":          "error",
      "unknownDefines":         "error",
      "uselessCode":            "error",
      "globalThis":             "error",
      "duplicateMessage":       "error"
    },
    "externs": [],
    "debug": false
  },
  "dist": {
    "files": [
      "scripts/scripts.js",
      "styles/styles.css",
      "base.html"
    ]
  }
}
